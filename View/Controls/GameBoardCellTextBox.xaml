<UserControl
    x:Class="NumbrixGame.View.GameBoardCellTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NumbrixGame.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="50"
    MaxWidth="50"
    MaxHeight="50">

    <Grid>
        <TextBox x:Name="textBox" FontSize="24" FontFamily="Consolas" TextAlignment="Center" IsEnabled="{x:Bind IsEnabled, Mode=TwoWay}" BorderThickness="0" HorizontalAlignment="Left" Text="{x:Bind Text, Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" GotFocus="OnFocused" BeforeTextChanging="OnBeforeTextChanges"/>

    </Grid>
</UserControl>
